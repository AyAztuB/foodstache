<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/primary">

        <ImageView
            android:id="@+id/user_pp_search"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_people_24"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/user_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user name"
            android:layout_below="@+id/user_pp_search"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/user_full_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="full name"
            android:layout_below="@+id/user_name_search"
            android:gravity="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/follow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_full_name_search"
            android:layout_centerHorizontal="true"
            android:text="Follow"
            android:textSize="12dp"
            />


    </RelativeLayout>




</RelativeLayout>